{% extends "layout.twig" %}

{% block content %}

<div class="bg-glow">

    <!--header-->
    <header>

        <div class="header">

            <div class="container">

                <div class="row">

                    <article class="span12">

                        {{widget('navigation', 'navigation', {'align': 'left'})|raw}}

                        {{widget('space', 'space', {'height': '50'})|raw}}

                        {{widget('logo', 'name', {"defaultlogo": asset('images/logo.png')})|raw}}

                        {{widget('space', 'space', {'height': '40'})|raw}}

                    </article>

                </div>

            </div>

        </div>

    </header>

    <!--content-->
    <div class="global">

        <div class="container">

            <div class="row">

                <article class="span12">

                    {{zone('main')|raw}}
                    
                    {{widget('space', 'space', {'height': '30'})|raw}}

                </article>

            </div>

        </div>

    </div>

    <!--footer-->
    <footer>

        <div class="container">

            {{widget('line', 'line', {'thickness': 'inherit', 'padding': 'inherit', 'length':'inherit', 'align': 'center'})|raw}}

            <div class="row">

                <section class="span12">

                    <div class="row">

                        <article class="span12">

                            {{widget('companyname', 'companyname', {"business": "Steak"})|raw}}
                            {{widget('profile', 'copyright', { 'profileType':'copyright' })|raw}}
                            {{widget('space', 'space', {'height': '30'})|raw}}

                        </article>

                    </div>

                </section>

            </div>

        </div>

    </footer>
    
</div>

{% endblock %}